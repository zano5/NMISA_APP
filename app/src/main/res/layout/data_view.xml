<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="5dp"
    card_view:cardUseCompatPadding="true"
    app:cardUseCompatPadding="true"
    android:id="@+id/card"
    xmlns:android="http://schemas.android.com/apk/res/android"

    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    >

    <ImageView
        android:id="@+id/app_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@null"
        android:transitionName="profile"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/app_usage"
        android:layout_alignBottom="@+id/app_usage"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@+id/app_image"
        android:layout_toStartOf="@+id/app_usage"
        android:singleLine="true"
        android:textSize="16sp"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/app_image"
        android:layout_toLeftOf="@+id/app_usage" />

    <TextView
        android:id="@+id/app_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/app_name"
        android:layout_below="@+id/app_name"
        android:textSize="12sp"
        android:layout_alignLeft="@+id/app_name" />

    <TextView
        android:id="@+id/app_usage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:textSize="14sp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="16dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/app_name"
        android:layout_below="@+id/app_time"
        android:layout_marginTop="4dp"
        android:minHeight="4dp"
        android:progress="40"
        android:progressDrawable="@drawable/bg_progress"
        android:layout_alignLeft="@+id/app_name" />

</RelativeLayout>
</android.support.v7.widget.CardView>